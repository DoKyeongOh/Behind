CREATE TABLE `REPLY` (
	`reply_no` BIGINT NOT NULL AUTO_INCREMENT PRIMARY KEY,
	`content` TEXT NULL,
	`replied_date` TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
	`is_use_anonymous_name` BOOL NULL,
	`account_no` INT NULL,
	`comment_no` VARCHAR(30) NULL REFERENCES PROFILE(account_no),
	`nickname` VARCHAR(15)
);